import pandas as pd

# Load raw data
sales = pd.read_csv('../data/raw/retail_sales_raw.csv')
customers = pd.read_csv('../data/raw/customers.csv')
products = pd.read_csv('../data/raw/products.csv')

# Merge data
df = sales.merge(customers, on='CustomerID').merge(products, on='ProductID')

# Fill missing prices
df['Price'].fillna(0, inplace=True)

# Remove duplicates
df.drop_duplicates(subset=['CustomerID','ProductID','SaleDate'], inplace=True)

# Save cleaned data
df.to_csv('../data/processed/retail_sales_cleaned.csv', index=False)
